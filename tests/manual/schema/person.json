{
  "$id": "Person",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the person",
      "example": "Lawrence"
    },
    "age": {
      "type": "integer",
      "description": "The age of the person",
      "example": 42
    }
  },
  "patternProperties": {
    "^n": {
      "key": "StringProperties",
      "type": "string",
      "minLength": 5
    },
    "^[A-Z]_": {
      "key": "StringPropertiesShort",
      "type": "string"
    }
  },
  "additionalProperties": {
    "type": "string"
  },
  "required": [
    "name"
  ]
}